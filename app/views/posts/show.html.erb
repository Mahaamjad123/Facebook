<div class="topnav">
<a class="active" href="#">  Facebook</a>
</div>
<p>
  <strong>Post:</strong>
  <%= @post.post_text %>
</p>

<h1>Comments</h1>
<table>
  <tr>
    <th>Comment</th>
    <th>Delete</th>
  </tr>
 
  <%= @post.comments.each do |comment| %>
    <tr>
      <td><%= comment.commnet_text %></td>
    
  </tr>
  <% end %>
</table>

<h2>Add Comment:</h2>
<%= form_with(model: [@post, @post.comments.build], local: true) do |form| %>
  <p>
    <%= form.label :Comment %><br>
    <%= form.text_area :commnet_text %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', users_path %>

